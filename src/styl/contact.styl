.contact {
  margin-bottom: 65px
  .map {
    &__wrap {
      position: relative
      &:before,
      &:after {
        content: ''
        position: absolute
        z-index: 2
        top: 0
        width: 100%
        height: 8px
        background: rgba(255, 255, 255, 0.6)
      }
      &:after {
        top: auto
        bottom: 0
      }
    }
    &__yandex,
    &__google {
      display: none
      &.active {
        display: block
      }
    }
    &__google {
      #map__google {
        width: 100%
        height: 530px
      }
    }

    &__option {
      position: absolute
      display: flex
      justify-content center
      align-items: flex-end
      bottom: 0
      left: 50%
      padding-bottom: 8px
      width: 155px
      height: 40px
      background: #ffffff
      &:before,
      &:after {
        content: ''
        position: absolute
        z-index: 0
        left: -40px
        bottom: 0
        border-left: 40px solid transparent;
        border-right: 40px solid transparent;
        border-bottom: 40px solid #ffffff;
      }
      &:after {
        right: -40px
      }
      .option__google,
      .option__yandex {
        position: relative
        z-index: 10
        color: #34546c
        text-decoration: underline
        cursor: pointer
        &:hover {
          text-decoration: none
        }
        &.active {
          color: #929292
          text-decoration: none
        }
      }
      .slash {
        z-index: 10
        &:before {
          content: '|'
        }
      }
    }
  }

  &__content {
    margin-top: 75px
  }

  &__info {
    li {
      margin-bottom: 22px
      color: #34546c
      &.info__title {
        font-size: 26px
      }
      b {
        font-family: latobold
      }
    }
  }

  &__form.form__submit {
    padding: 0
    min-width: 227px;
    width: 227px;
    h3 {
      margin-top: 0
      margin-bottom: 32px
      align-self flex-start
      font-family: latoregular
      font-weight: 400
      font-size: 23px
      color: #34546c
    }
    textarea {
      margin-bottom: 10px
    }
    button {
      position: relative
      z-index: 10
      margin-top: 5px
      width: 103px
      height: 35px
      color: #ffffff
      border-radius: 4px
      background-color: #6dadda
      &:before {
        content: ''
        position: absolute
        z-index: -1
        left: 0
        top: 0
        bottom: -5px
        width: 103px
        height: 35px
        background-color: #6dadda
        border-radius: 4px
      }
      &:after {
        content: ''
        position: absolute
        z-index: -2
        left: 0
        bottom: -3px
        width: 103px
        height: 35px
        background-color: #417aa3
        border-radius: 4px
      }
    }
  }
}

@media (max-width: 630px) {
    .contact {
      &__content {
        flex-direction: column
        margin-top: 65px
        form.form__submit.contact__form {
          margin-top: 40px
        }
      }
    }
}