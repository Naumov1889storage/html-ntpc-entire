.nanocad2 {

  .tabs1 {
    .tabs__title {
      li {
        a {
          font-size: 19px
        }
      }
    }
  }

  &__video {
    margin: 0 auto
    max-width: 808px
    width: 100%
    iframe {
      width: 100%
      box-sizing: border-box
      border: 1px solid rgba(113, 113, 113, 0.6)
    }
  }

  &__other {
    ul {
      display: flex
      justify-content: space-around
      flex-wrap: wrap
      li {
        margin: 15px 10px 15px 10px
        a {
          position: relative
          display: block
          padding-top: 50px
          font-family: Calibri, Segoe, "Segoe UI", Optima, Arial, sans-serif
          font-size: 16px
          font-weight: 400
          line-height: 20px
          color: #4984ad
          text-align: center
          &:before {
            content: ''
            position: absolute
            top: 0
            left: 50%
            transform: translateX(-50%)
            width: 50px
            height: 50px
            background: url(/img/icon-nanocad1.png) no-repeat center
            background-size: contain
          }
        }
        &:nth-child(1) {

        }
        &:nth-child(2) {
          a {
            &:before {
              background-image: url(/img/icon-nanocad2.png)
            }
          }
        }
        &:nth-child(3) {
          a {
            &:before {
              background-image: url(/img/icon-nanocad3.png)
            }
          }
        }
        &:nth-child(4) {
          a {
            &:before {
              background-image: url(/img/icon-nanocad2.png)
            }
          }
        }
        &:nth-child(5) {
          a {
            &:before {
              background-image: url(/img/icon-nanocad1.png)
            }
          }
        }

      }
    }
  }
}

@media (max-width: 1040px) {
  .nanocad2 {

    .tabs1 {
      .tabs__title {
        li {
          a {
            font-size: 20px
          }
        }
      }
    }
  }
}