.mainfield {
  padding-bottom: 70px
  h2 {
    margin: 65px 0 65px 0
    text-align: center
    font-family: latobold
    font-size: 52px
    line-height: 60px
    color: #717171
    text-transform: uppercase
  }

  #tabs {
    box-shadow: -1px 1px 26px rgba(0, 0, 0, 0.4)
    .tabs__title__wrap {
      position: relative
      &:before {
        content: ''
        position: absolute
        top: -41px
        right: 40px
        left: 40px
        height: 10px
        box-shadow: -1px 1px 26px rgba(0, 0, 0, 0.4)
      }
      &:after {
        content: ''
        position: absolute
        top: -27px
        left: 16px
        width: 50px
        height: 50px
        box-shadow: -1px 1px 26px rgba(0, 0, 0, 0.4)
        transform: rotate(45deg)
      }
    }
    .tabs__title {
      display: flex
      justify-content: space-between
      position: relative
      //width: 110%
      //margin-left: -12px
      //padding-left: 15px
      top: -41px
      height: 41px
      overflow: hidden
      li {
        position: relative
        display: flex
        justify-content: center
        align-items: center
        &:before {
          content: ''
          position: absolute
          z-index: 10
          left: -10px
          width: 150px
          height: 41px
          background: #ccc
        }
        &:after {
          content: ''
          position: absolute
          z-index: -10
          right: 3px
          width: 100px
          height: 400px
          background: black
          transform: rotate(-45deg)
          box-shadow: -1px 1px 26px rgba(0, 0, 0, 0.4)
        }
        &:nth-child(1) {
          a {
            z-index: 30
            padding: 5px 17px 0 45px
            &:before {
              left: 50px
              background-color: darkmagenta
            }
          }
          &:before {
            z-index: 30
            top: -5px
            left: -8px
            height: 100px
            transform: rotate(-45deg)
            background-color: darkmagenta
          }
          &:after {
            z-index: 25
            width: 60px
            right: 0
            background-color: darkmagenta
          }
        }
        &:nth-child(2) {
          a {
            z-index: 22
            &:before {
              background-color: #7ac6df
            }
          }
          &:before {
            background-color: #7ac6df
          }
          &:after {
            z-index: 20
            background-color: #7ac6df
          }
        }

        &:nth-child(3) {
          a {
            z-index: 18
            &:before {
              background-color: #48a0bd
            }
          }
          &:before {
            background-color: #48a0bd
          }
          &:after {
            z-index: 16
            background-color: #48a0bd
          }
        }
        &:nth-child(4) {
          a {
            z-index: 14
            &:before {
              background-color: #42c0c5
            }
          }
          &:before {
            background-color: #42c0c5
          }
          &:after {
            z-index: 12
            right: -4px
            width: 50px
            background-color: #42c0c5
          }
        }
        &:nth-child(5) {
          a {
            z-index: 10
            padding: 5px 43px 0 39px

            &:before {
              left: -40px
              background-color: #14968e
            }
          }
          &:before {
            left: -70px
            background-color: #14968e
          }
          &:after {
            z-index: 2
            right: 40px
            background-color: #14968e
            box-shadow: none
          }
        }

        &.ui-tabs-active {
          //z-index: 100
          &:before,
          &:after {
            background: #ffffff
          }
          a {
            color: #5d5d5d
            &:before {
              background: #ffffff
            }
          }
        }
        a {
          position: relative
          //z-index: 20
          padding: 5px 24px 0 39px
          width: 100%
          height: 100%
          font-family: latoregular
          font-size: 22px
          color: #ffffff
          text-decoration: none
          &:before {
            content: ''
            position: absolute
            z-index: -1
            top: -5px
            left: 35px
            right: 35px
            max-width: 100%
            height: 120%
            background: #7ac6df
          }
        }
      }
    }
    .tabs__content {
      & > div {
        padding: 0 0 40px 0
      }
      h3 {
        display: block
        width: 228px
        font-family: latoblack
        font-size: 25px
        line-height: 25px
        color: #6197a2
        letter-spacing: 0.3px
      }
       .divider.left.right {
          margin: 0
          margin-bottom: 30px
      }
      b {
        font-family: Calibri
        font-size: 18px
        font-weight: 600
        line-height: 26px
        color: #3a3a3a
      }
      p {
        font-family: Calibri
        font-size: 16px
        line-height: 20px
        color: #3a3a3a
      }
      .divider {
        margin: 44px 0 44px 0

      }
      #tabs-1 {
        .flex_row__between {
          .left {
            min-width: 190px
            img {
              margin-left: 40px
              margin-right: 20px
            }
          }
          .right {
            p {
              padding-right: 40px
            }
            .companylife {
              display: block
              margin-top: 18px
            }
          }
        }
        ul.features {
          li {
            padding-top: 70px
            width: 75px
            font-family: latoregular
            font-size: 16px
            line-height: 20px
            text-align: center
            color: #4373aa
            background: url(/img/iconset-features.jpg) no-repeat
            background-position: 12px 0
            &:nth-child(2) {
              background-position: -122px 0
            }
            &:nth-child(3) {
              background-position: -260px 0
            }
          }
        }
      }
    }
  }
}

.triangle-with-shadow {
  width: 100px;
  height: 100px;
  position: relative;
  overflow: hidden;
  box-shadow: 0 16px 10px -17px rgba(0, 0, 0, 0.5);
}
.triangle-with-shadow:after {
  content: "";
  position: absolute;
  width: 50px;
  height: 50px;
  background: #999;
  transform: rotate(45deg);
  top: 75px;
  left: 25px;
  box-shadow: -1px -1px 10px -2px rgba(0, 0, 0, 0.5);
}