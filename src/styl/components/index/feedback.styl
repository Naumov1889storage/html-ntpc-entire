.feedback {
  margin-bottom: 146px
  form {
    margin-right: 50px
    &:before {
      content: ''
      position: absolute
      z-index -1
      left: -6px
      right: -6px
      top: -6px
      bottom: -6px
      background-image: linear-gradient(to bottom, #5ab6e8 0%, #00c6b5 100%)
    }
    button {
      margin-top: 10px
      margin-bottom: -25px
      padding-right: 35px
      width: 223px
      height: 50px
      font-family: latobold
      font-size: 18px
      color: #fefefe
      background: url(/img/icon-submit.png)
    }
  }
  .right {
    .logo {
      img {
        min-width: 150px
        height: 68px
      }
    }
    .features {
      margin-top: 30px
      margin-bottom: 30px
      ul {
        margin-right: 20px
        &:last-child {
          margin-right: 0
        }
        li {
          position: relative
          padding-left: 30px
          margin-bottom: 15px
          &:before {
            content: ''
            position: absolute
            top: 50%
            transform: translateY(-50%)
            left: 0
            width: 19px
            height: 19px
            border: 2px solid #f46163
            border-radius: 100px
          }
          &:after {
            content: ''
            position: absolute
            top: 50%
            transform: translateY(-50%)
            left: 7px
            width: 9px
            height: 9px
            background: #2a6bb0
            border-radius: 100px
          }
        }
      }
    }
    .links {
      padding: 14px 0 14px 0
      a {
        position: relative
        margin-right: 35px
        padding-left: 35px
        &:before {
          content: ''
          position: absolute
          left: 0
          width: 25px
          height: 25px
          background: url(/img/iconset-links.jpg) no-repeat 3px 0
        }
        &:nth-child(2) {
          &:before {
            background-position: -160px 0
          }
        }
        &:nth-child(3) {
          &:before {
            background-position: -399px 0
          }
        }
      }
    }
  }
}

@media (max-width: 970px) {
    .feedback {
      margin-bottom: 85px
      .container > .flex_row__between {
        flex-direction: column
        align-items: center
      }
      form {
        margin-right: 0
      }
      .right {
        margin-top: 35px
      }
      .features {
        justify-content: space-around
      }
      .links {
        display: flex
        flex-wrap: wrap
        justify-content: center
        a {
          margin-top: 8px
          margin-bottom: 8px
        }
      }
    }
}

@media (max-width: 480px) {
  .feedback {
    .features {
      flex-direction: column
      ul {
        margin-right: 0
      }
    }
    .links {
      justify-content: flex-start
    }
  }
}