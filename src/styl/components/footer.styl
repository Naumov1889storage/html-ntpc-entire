.footer {
  position: relative
  padding: 0 0 45px 0
  &:before {
    content: ''
    position: absolute
    top: -7px
    width: 100%
    height: 8px
    background-image: linear-gradient(to left, #547695 0%, #7ab6e1 100%);
  }
  &__wrap {
    display: flex
    justify-content: space-between
    flex-wrap: wrap
  }
  &, a {
    font-family: latoregular
    font-size: 16px
    line-height: 24px
    color: #c3c3c3
    //background: #404040
    background: #2b3640
  }
  &__logo {
    display: flex
    align-self center
    margin-top: 46px
    margin-left: 47px
    height: 100%
  }
  ul {
    display: flex
    flex-direction column
    margin: 46px 20px 0 20px
    li {
      &.footer__title {
        margin-bottom: 12px
        font-family: latobold
        font-size: 16px
        line-height: 24px
        color: #ffffff
      }
      a {
        text-decoration: underline
        &:hover {
          text-decoration: none
        }
      }
    }
  }
  &__contact {
    li {
      margin-bottom: 12px
    }
  }
}

@media (max-width: 645px) {
  .footer {
    &__wrap {
      ul, .footer__logo {
        width: 240px
        margin-left: 0
        margin-right: 0
      }
    }
  }
}