@media (max-width: 1040px) {
  .nanocad2 {

    .tabs1 {
      .tabs__title {
        li {
          a {
            font-size: 20px
          }
        }
      }
    }
  }
}
/*NANOCAD2 END*/


/*ENGSOFT BEGIN*/
.engsoft {

  &__types {
    .container {
      display: flex
      flex-wrap: wrap
    }
    a {
      position: relative
      margin: 5px 15px 5px 0
      padding: 0 13px 0 13px
      height: 37px
      font-family: Calibri, Segoe, "Segoe UI", Optima, Arial, sans-serif
      font-size: 16px
      font-weight: 400
      line-height: 37px
      text-decoration: none
      border: 1px solid #4984ad
      background-color: #ffffff
      &:hover {
        color: darken(#0f73b9, 50%)
        border-color: darken(#4984ad, 50%)
      }
      &:first-child {
        &:before {
          z-index: 1
          background: #ffffff
        }
      }
      &:last-child {
        &:after {
          z-index: 1
          background: #ffffff
        }
      }
      &:before, &:after {
        content: ''
        position: absolute
        z-index: -1
        top: 50%
        left: -701px
        width: 700px
        height: 1px
        background: #4984ad
      }
      &:after {
        left: auto
        right: -701px
      }
    }
  }

  &__content {
    .container {
      display: flex
      flex-wrap: wrap
    }
    .item {
      display: flex
      flex-direction: column
      align-items center
      margin: 17px 0 17px 0
      min-width: 230px
      width: 25%
      & > a {
        height: 212px // change
        text-align: center
        img {
          display: block
        }
      }
      .accordion {
        max-width: 230px
        width: 100%
        &.active {
          .content {
            padding: 33px 0 15px 0
            max-height: 620px
            border-bottom: 1px solid #9e9e9e
            border-top: 1px solid #9e9e9e
          }
          .toggler {
            span:nth-child(1) {
              display: none
            }
            span:nth-child(2) {
              display: block
            }
          }
        }
        .toggler {
          position: relative
          margin: 0 auto
          max-width: 122px
          span:nth-child(2) {
            display: none
          }
        }
        .content {
          max-height: 0
          margin-top: -13.5px
          padding: 0
          border: 1px solid #9e9e9e
          border-radius: 4px
          border-top: none
          border-bottom: none
          overflow: hidden
          transition: .4s ease-out
          li {
            a {
              display: block
              padding: 0 20px 0 20px
              font-family: Calibri, Segoe, "Segoe UI", Optima, Arial, sans-serif;
              font-size: 16px;
              font-weight: 400;
              line-height: 20px;
            }
          }
        }
      }
    }
  }

}

@media (max-width: 970px) {
  .engsoft {
    &__content {
      .item {
        width: 33%
      }
    }
  }
}

@media (max-width: 780px) {
