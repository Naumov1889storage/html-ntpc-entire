.nanocad {
  .btn3 {
    padding-bottom: 2px
    font-family: Lato
    font-size: 16px
    font-weight: 400
    color: #000000
    text-decoration: none
  }

  p, p > a, p > b {
    font-family: Calibri, Segoe, "Segoe UI", Optima, Arial, sans-serif !important
    font-size: 16px !important
    font-weight: 400
    line-height: 20px !important
    color: #545454 !important
  }
  p > a {
    color: #417aa3 !important
  }

  h2 {
    color: #4984ad
    font-family: latoblack
    font-size: 20px
    line-height: 32px
    text-transform: uppercase
    text-align: center
  }
  h3, h3 > a {
    font-family: latoblack
    font-size: 20px
    font-weight: 400
    line-height: 32px
    color: #4984ad
  }

  .downloadImg,
  .downloadImg span {
    position: relative
    display: block
    margin-bottom: 30px
    padding: 4px 20px 4px 90px
    font-family: Calibri
    font-size: 16px
    font-weight: 400
    line-height: 20px
    color: #545454
    text-decoration: none
    .size {
      margin: 0
      padding: 0
      color: #989898
      &:before {
        display: none
      }
    }
    &:before {
      content: ''
      position: absolute
      top: 0
      left: 41px
      width: 36px
      height: 48px
      background: url(/img/icon-document.png) no-repeat center
    }
  }

  .form__number {
    font-family: latoblack
    font-size: 80px
    color: #545454
  }
  h3.form__title {
    font-family: latoblack !important
    font-size: 27px !important
    color: #545454 !important
    span {
      display: block
      font-family: latoregular
      font-size: 16px
    }
  }
  &__form.form__submit {
    input {
      margin-bottom: 11px
    }
    button {
      margin: 12px 0 11px 0
    }
    .checkbox.checkbox--cirle {
      width: 100%
      label {
        color: #666666
        line-height: 22px
      }
    }
  }

  &__modal.modal {
    max-width: 340px
    &:before {
      display: none
    }
    .modal__close {
      top: 3px
      right: 1px
      font-family: latoblack
      font-size: 14px
      color: #666666
      border: none
    }

    h3.form__title {
      font-size: 22px !important
    }
  }

}

.nanocad1.nanocad {

